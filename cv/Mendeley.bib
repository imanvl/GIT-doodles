@article{Ricci1998,
abstract = {Previous studies have analyzed how European Monetary Union (EMU) is
likely to affect exchange rate variability by focusing on the game-theoretic
interactions of monetary authorities or fiscal authorities or both.
This paper instead emphasizes the role of the sectoral dimension
of international macroeconomic adjustment. It develops a three-country,
