@article{Buiter1999a,
abstract = {The paper establishes the following: First, money is neutral even
if there is a non-zero stock of non-monetary nominal public debt,
because the government adjusts real taxes to satisfy its inter-temporal
budget constraint. Second, Woodford's fiscal theory of the price
level, according to which for certain fiscal rules the (initial)
